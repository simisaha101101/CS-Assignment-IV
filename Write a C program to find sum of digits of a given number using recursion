#include<stdio.h>
int sumOfDigits(int num);
int main()
{
int num,sum;
printf("Enter any number to find sum of digits:");
scanf("%d,&num);
sum=sumOfDigits(num);
printf("Sum of digits of %d=%d",num,sum);
return0;
}
int sumOfDigit(int num)
{
if(num==0)
return0;
return0;
return((num%10)+sumOfDigits(num/10));
}
